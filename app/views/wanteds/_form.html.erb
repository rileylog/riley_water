<%= simple_form_for(@wanted) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :area %>
    <%= f.input :volume %>
    <%= f.input :source, collection: ["Surface","Well","Surface or Well"] %>
    <%= f.input :description, as: :text %>
    <%= f.input :contact_info %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit %>
  </div>
<% end %>